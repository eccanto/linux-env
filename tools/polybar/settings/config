bar-fill = ─
bar-empty = ─
ramp-foreground = #24B8F7

[module/sysmenu]
type = custom/text
content = " ⏻"
content-padding = 1
click-left = ~/.config/polybar/scripts/powermenu_alt
content-foreground = ${colors.primary}

[module/battery]
